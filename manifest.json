{
  "manifest_version": 3,
  "name": "Font Changer",
  "version": "1.0",
  "description": "Change the font of all websites to your selected font.",
  "permissions": ["activeTab", "scripting", "storage", "fontSettings"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
